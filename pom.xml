        <plugins>
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <mainClass>tn.learniverse.tests.MainFX</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>