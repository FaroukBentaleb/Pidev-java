<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.learniverse.controllers.LessonsBackViewController" spacing="20" alignment="TOP_CENTER" style="-fx-padding: 30; -fx-background-color: #F8FAFC;">
    <Label fx:id="courseTitleLabel" style="-fx-font-size: 22px; -fx-text-fill: #1E293B;" />

    <TableView fx:id="lessonTable" prefWidth="700">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="200"/>
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="300"/>
            <TableColumn fx:id="attachmentColumn" text="Attachment" prefWidth="200"/>
        </columns>
    </TableView>
</VBox>
