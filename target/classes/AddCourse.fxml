<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@add-course.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.learniverse.controllers.AddCourseController">

<children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: linear-gradient(to right, #6A11CB, #2575FC); -fx-background-radius: 15;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>
            <children>
                <Label text="Ajouter un Cours" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>

                <TextField fx:id="titleField" promptText="Titre" styleClass="input-field">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>

                <TextArea fx:id="descriptionField" prefHeight="100.0" promptText="Description" styleClass="input-field">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextArea>

                <TextField fx:id="durationField" promptText="Durée (en heures)" styleClass="input-field">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>

                <TextField fx:id="priceField" promptText="Prix (en DT)" styleClass="input-field">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>

                <ComboBox fx:id="levelComboBox" prefWidth="Infinity" promptText="Niveau" styleClass="input-field" />

                <ComboBox fx:id="categoryComboBox" prefWidth="Infinity" promptText="Catégorie" styleClass="input-field" />

                <Button fx:id="addButton" onAction="#AddCourse" prefWidth="200.0" styleClass="add-button" text="Ajouter">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>

</AnchorPane>
