<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.learniverse.controllers.CommentaireItemController"
      stylesheets="@styleAffichage.css"
      style="-fx-padding: 15; -fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e0e0e0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0.3, 0, 2);"
      spacing="10">



    <HBox spacing="10" styleClass="post-header">
        <Label styleClass="published-by-label" text="Published By" />
        <Label fx:id="auteurLabel" styleClass="author-name" />

        <Label styleClass="post-category" text="ðŸ“…" />
        <Label fx:id="dateLabel" styleClass="post-category" />
    </HBox>


    <Label fx:id="contenuLabel" wrapText="true" style="-fx-font-size: 30;"/>

    <ImageView fx:id="gifImageView"
               fitWidth="250"
               preserveRatio="true"
               visible="false"
               style="-fx-background-color: #f0f0f0; -fx-padding: 5;"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Update"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-background-radius: 5;"
                onAction="#handleModifier"/>
        <Button text="Delete"
                style="-fx-background-color: #00087d; -fx-text-fill: white; -fx-background-radius: 5;"
                onAction="#handleSupprimer"/>
    </HBox>
</VBox>
