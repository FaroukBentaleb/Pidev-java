<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.learniverse.controllers.Profile"
            stylesheets="@profile-style.css">

    <BorderPane prefHeight="800.0" prefWidth="1280.0">
        <!-- Sidebar -->
        <left>
            <VBox prefWidth="300.0" styleClass="sidebar" alignment="TOP_CENTER" spacing="10">
                <padding><Insets top="30" right="20" bottom="30" left="20" /></padding>

                <ImageView fx:id="profileImage" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true"
                           styleClass="profile-image" />

                <HBox alignment="CENTER" spacing="5">
                    <Label fx:id="usernameLabel" text="farouk_bentaleb" styleClass="username-label" />
                    <HBox fx:id="verifiedBadge" styleClass="verified-badge">
                        <Label text="Verified" textFill="white" styleClass="verified-text" />
                    </HBox>
                </HBox>
                <!-- Add menu items if needed -->
            </VBox>
        </left>

        <!-- Main Content -->
        <center>
            <ScrollPane fitToWidth="true" prefHeight="720.0" prefViewportHeight="720.0" vbarPolicy="ALWAYS">
                <content>
                    <VBox spacing="20" styleClass="main-content" prefWidth="980">
                        <padding>
                            <Insets top="30" right="40" bottom="30" left="40"/>
                        </padding>

                        <!-- Header -->
                        <Label text="Profile Information" styleClass="section-header" textFill="#1a73e8"/>

                        <!-- Personal Details -->
                        <VBox styleClass="section-container">
                            <Label text="Personal Details" styleClass="section-title"/>
                            <HBox spacing="20">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Name" styleClass="field-label"/>
                                    <TextField fx:id="nameField" promptText="Name" styleClass="text-field"/>
                                </VBox>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Family Name" styleClass="field-label"/>
                                    <TextField fx:id="familyNameField" promptText="Family Name" styleClass="text-field"/>
                                </VBox>
                            </HBox>
                            <HBox spacing="20">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Email" styleClass="field-label"/>
                                    <TextField fx:id="emailField" promptText="Email" styleClass="text-field"/>
                                </VBox>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Phone" styleClass="field-label"/>
                                    <TextField fx:id="phoneField" promptText="Phone" styleClass="text-field"/>
                                </VBox>
                            </HBox>
                            <HBox spacing="20">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Date of Birth" styleClass="field-label"/>
                                    <DatePicker fx:id="birthDatePicker" promptText="Date of Birth"
                                                styleClass="date-picker"/>
                                </VBox>
                            </HBox>
                        </VBox>
                        <!-- Professional Info -->
                        <VBox styleClass="section-container">
                            <Label text="Professional Information" styleClass="section-title"/>
                            <HBox spacing="20">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Job Title" styleClass="field-label"/>
                                    <TextField fx:id="jobTitleField" promptText="Job Title" styleClass="text-field"/>
                                </VBox>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Experience" styleClass="field-label"/>
                                    <TextField fx:id="experienceField" promptText="Experience (years)"
                                               styleClass="text-field"/>
                                </VBox>
                            </HBox>
                            <VBox spacing="5">
                                <Label text="Description" styleClass="field-label"/>
                                <TextArea fx:id="descriptionArea" promptText="Description" wrapText="true"
                                          prefHeight="100.0"
                                          styleClass="text-area"/>
                            </VBox>
                        </VBox>
                        <!-- Documents -->
                        <VBox styleClass="section-container">
                            <Label text="Documents &amp; Media" styleClass="section-title"/>
                            <HBox spacing="20">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Resume" styleClass="field-label"/>
                                    <HBox styleClass="file-upload-container">
                                        <Button text="Choose file" onAction="#chooseResumeFile"
                                                styleClass="file-choose-button"/>
                                        <Label fx:id="resumeFileLabel" text="No file chosen" styleClass="file-name-label"/>
                                    </HBox>
                                </VBox>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Profile Picture" styleClass="field-label"/>
                                    <HBox styleClass="file-upload-container">
                                        <Button text="Choose file" onAction="#chooseProfilePicture"
                                                styleClass="file-choose-button"/>
                                        <Label fx:id="pictureFileLabel" text="No file chosen" styleClass="file-name-label"/>
                                    </HBox>
                                </VBox>
                            </HBox>
                        </VBox>
                        <!-- Social Media -->
                        <VBox styleClass="section-container">
                            <Label text="Social Media Links" styleClass="section-title"/>
                            <HBox spacing="20">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Facebook URL" styleClass="field-label"/>
                                    <TextField fx:id="facebookField" promptText="Facebook URL" styleClass="text-field"/>
                                </VBox>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Instagram URL" styleClass="field-label"/>
                                    <TextField fx:id="instagramField" promptText="Instagram URL" styleClass="text-field"/>
                                </VBox>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="LinkedIn URL" styleClass="field-label"/>
                                    <TextField fx:id="linkedinField" promptText="LinkedIn URL" styleClass="text-field"/>
                                </VBox>
                            </HBox>
                        </VBox>
                        <!-- Buttons -->
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <Button text="Save Infos" onAction="#saveProfile" styleClass="save-button"/>
                            <Button text="Cancel" onAction="#cancelChanges" styleClass="cancel-button"/>
                            <Button text="Delete Account" onAction="#deleteAccount" styleClass="delete-button"/>
                        </HBox>
                    </VBox>
                </content>
            </ScrollPane>
        </center>

    </BorderPane>
</AnchorPane>
