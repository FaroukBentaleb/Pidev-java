<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.learniverse.controllers.user.Login">
    <HBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Left Panel -->
        <StackPane styleClass="left-panel" HBox.hgrow="ALWAYS">
            <VBox alignment="CENTER" maxWidth="400" spacing="20">
                <Label styleClass="welcome-title" text="Welcome to Learniverse!" />
                <Label styleClass="welcome-subtitle" text="Dive into a world of endless learning opportunities" textAlignment="CENTER" wrapText="true" />
                <Label styleClass="welcome-message" text="Don't have an account? Join us today and start your learning journey—it’s quick and easy" textAlignment="CENTER" wrapText="true" />
                <Button onAction="#Signup_btn" prefHeight="42.0" prefWidth="300.0" styleClass="alt-button" text="Sign up" />
                <padding>
                    <Insets bottom="20" top="20" />
                </padding>
            </VBox>
        </StackPane>

        <!-- Right Panel -->
        <StackPane styleClass="right-panel" HBox.hgrow="ALWAYS">
            <VBox alignment="CENTER" maxWidth="400" spacing="25">
                <ImageView fx:id="logoImageView" fitHeight="142.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                </ImageView>
                <!-- Login Form -->
                <VBox spacing="10">
                    <!-- Email Field -->
                    <TextField fx:id="login_email" promptText="Email..." styleClass="input-field" />
                    <Label fx:id="error_email" minHeight="10.0" styleClass="error-label">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin></Label>

                    <!-- Password Field -->
                    <PasswordField fx:id="login_pwd" promptText="Password" styleClass="input-field" />
                    <TextField fx:id="textField" managed="false" promptText="Password" styleClass="input-field" visible="false" />
                    <Label fx:id="error_pwd" styleClass="error-label" />
                    <CheckBox fx:id="showPasswordCheckBox" text="Show" />

                    <!-- reCAPTCHA Area -->
                    <HBox styleClass="captcha-container">
                        <Label styleClass="captcha-placeholder" text="reCAPTCHA placeholder" />
                    </HBox>

                    <!-- Login Button -->
                    <Button onAction="#Login_btn" prefHeight="43.0" prefWidth="404.0" styleClass="login-button" text="Login Here" />

                    <!-- Forgot Password -->
                    <Hyperlink onAction="#forgotPassword" styleClass="forgot-password" text="Forgot password?" />

                    <!-- Social Login -->
                    <HBox alignment="CENTER" spacing="15">
                        <Button styleClass="social-button" text="Continue with Google" />
                        <Button styleClass="social-button" text="Continue with GitHub" />
                    </HBox>

                    <!-- Sign Up Link -->
                    <HBox alignment="CENTER" spacing="5" />
                </VBox>
            </VBox>
        </StackPane>
    </HBox>
</AnchorPane>
