                    </VBox>

                    <!-- Pagination Controls -->
                    <HBox alignment="CENTER" spacing="10.0">
                        <Pagination fx:id="pagination" maxPageIndicatorCount="7" pageCount="1" prefHeight="50.0" styleClass="mfx-pagination" />
                    </HBox>

                    <!-- Status Label -->
                    <HBox alignment="CENTER_LEFT">
                        <MFXIconWrapper fx:id="infoIcon" />
                        <Label fx:id="statusLabel" text="Showing competitions 1-6 of 20" styleClass="status-info">
                            <HBox.margin>
