<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.effect.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Tooltip?>
<?import java.lang.String?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.learniverse.controller.OffreDisplayController" 
            stylesheets="@../styles/offer-display.css"
            style="-fx-background-color: #f8f9fa;">

    <!-- Left Navigation -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="240.0" spacing="15" 
              style="-fx-background-color: linear-gradient(to bottom right, #2962FF, #3D5AFE); 
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);">
            <padding>
                <Insets bottom="20.0" left="15.0" right="15.0" top="25.0" />
            </padding>

            <!-- Animated Logo Container -->
            <StackPane styleClass="logo-container" minHeight="60">
                <Circle fill="WHITE" radius="25" opacity="0.2"/>
                <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" 
                       text="Learniverse">
                    <effect>
                        <DropShadow color="rgba(0,0,0,0.2)" radius="5"/>
                    </effect>
                </Label>
            </StackPane>

            <!-- Enhanced Navigation Menu -->
            <VBox spacing="8" style="-fx-padding: 20 0;">
                <Button styleClass="nav-button" text="Dashboard">
                    <graphic>
                        <FontAwesomeIconView glyphName="DASHBOARD" size="18" fill="WHITE"/>
                    </graphic>
                </Button>
                
                <Button styleClass="nav-button, nav-button-active" text="Offers" fx:id="offersButton">
                    <graphic>
                        <FontAwesomeIconView glyphName="GIFT" size="18" fill="WHITE"/>
                    </graphic>
                </Button>
                
                <Button styleClass="nav-button" text="My Courses">
                    <graphic>
                        <FontAwesomeIconView glyphName="BOOK" size="18" fill="WHITE"/>
                    </graphic>
                </Button>
                
                <Button styleClass="nav-button" text="Discover">
                    <graphic>
                        <FontAwesomeIconView glyphName="COMPASS" size="18" fill="WHITE"/>
                    </graphic>
                </Button>
                
                <Button styleClass="nav-button" text="Community">
                    <graphic>
                        <FontAwesomeIconView glyphName="USERS" size="18" fill="WHITE"/>
                    </graphic>
                </Button>
                
                <Button styleClass="nav-button" text="Settings">
                    <graphic>
                        <FontAwesomeIconView glyphName="COGS" size="18" fill="WHITE"/>
                    </graphic>
                </Button>
            </VBox>

            <VBox VBox.vgrow="ALWAYS"/>

            <!-- Modern Profile Card -->
            <VBox styleClass="profile-card" spacing="12">
                <HBox alignment="CENTER" spacing="15">
                    <StackPane styleClass="avatar-container">
                        <Circle fill="WHITE" radius="25"/>
                        <Label style="-fx-text-fill: #2962FF; -fx-font-size: 20px; -fx-font-weight: bold;" text="F"/>
                    </StackPane>
                    <VBox spacing="4">
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="Farouk"/>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Circle fill="#4CAF50" radius="4"/>
                            <Label style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 13px;" text="Online"/>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox>
            <!-- Top Bar - Fixed -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 20 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <VBox spacing="4">
                    <Label text="Welcome back!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2962FF;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- Search Box -->
                <HBox alignment="CENTER" spacing="10" styleClass="modern-search-box">
                    <FontAwesomeIconView glyphName="SEARCH" size="16" fill="#666"/>
                    <TextField fx:id="searchField" promptText="Search for courses..." 
                              style="-fx-background-color: transparent; -fx-font-size: 14px;"/>
                </HBox>
                
                <!-- Notification Bell -->
                <StackPane styleClass="icon-button">
                    <Circle fill="transparent" radius="20"/>
                    <FontAwesomeIconView glyphName="BELL" size="18"/>
                    <Circle styleClass="notification-dot" radius="4" 
                            translateX="8" translateY="-8"/>
                </StackPane>
                
                <!-- Cart Icon -->
                <StackPane styleClass="icon-button">
                    <Circle fill="transparent" radius="20"/>
                    <FontAwesomeIconView glyphName="SHOPPING_CART" size="18"/>
                </StackPane>
                
                <!-- Login/Signup Buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Login" styleClass="login-button"/>
                    <Button text="Sign Up" styleClass="signup-button"/>
                </HBox>
            </HBox>

            <!-- Main Scrollable Content -->
            <ScrollPane fitToWidth="true" styleClass="main-scroll-pane" VBox.vgrow="ALWAYS">
                <VBox spacing="30" style="-fx-padding: 30;">
                    <!-- Knowledge Expansion Card -->
                    <VBox styleClass="welcome-card" style="-fx-background-color: #2962FF; -fx-background-radius: 15; -fx-padding: 30;">
                        <effect>
                            <DropShadow color="rgba(0,0,0,0.2)" radius="10" spread="0.1"/>
                        </effect>
                        <Label text="Expand Your Knowledge" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        <Label text="Discover thousands of courses and learning resources tailored to your needs." 
                               style="-fx-font-size: 16px; -fx-text-fill: rgba(255,255,255,0.9); -fx-wrap-text: true;" />
                        <HBox spacing="15" style="-fx-padding: 20 0 0 0;">
                            <Button text="Explore Courses" styleClass="welcome-button"/>
                            <Button text="View Catalog" styleClass="welcome-button-outline"/>
                        </HBox>
                    </VBox>

                    <HBox spacing="30">
                        <!-- Learning Progress Section -->
                        <VBox styleClass="stats-card" HBox.hgrow="ALWAYS">
                            <Label text="Your Learning Progress" styleClass="section-title"/>
                            <HBox spacing="30" style="-fx-padding: 20 0;">
                                <VBox styleClass="stat-box" alignment="CENTER">
                                    <Label text="5" styleClass="stat-number"/>
                                    <Label text="Active Courses" styleClass="stat-label"/>
                                </VBox>
                                <VBox styleClass="stat-box" alignment="CENTER">
                                    <Label text="75%" styleClass="stat-number"/>
                                    <Label text="Average Progress" styleClass="stat-label"/>
                                </VBox>
                                <VBox styleClass="stat-box" alignment="CENTER">
                                    <Label text="12" styleClass="stat-number"/>
                                    <Label text="Completed" styleClass="stat-label"/>
                                </VBox>
                            </HBox>
                        </VBox>

                        <!-- Quote of the Day -->
                        <VBox styleClass="quote-card" HBox.hgrow="ALWAYS">
                            <Label text="Quote of the Day" styleClass="section-title"/>
                            <VBox alignment="CENTER" style="-fx-padding: 20 0;">
                                <FontAwesomeIconView glyphName="QUOTE_LEFT" size="24" fill="#2962FF"/>
                                <Label text="Education is the most powerful weapon which you can use to change the world." 
                                       styleClass="quote-text" wrapText="true"/>
                                <Label text="â€” Nelson Mandela" styleClass="quote-author"/>
                            </VBox>
                        </VBox>
                    </HBox>

                    <!-- Offers Section -->
                    <VBox spacing="20" style="-fx-padding: 0 30;">
                        <HBox alignment="CENTER_LEFT" spacing="20">
                            <Label text="Available Offers" styleClass="section-title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            
                            <!-- Filter Controls -->
                            <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="filter-controls">
                                <ComboBox promptText="Sort By" styleClass="filter-combo">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Price: Low to High"/>
                                            <String fx:value="Price: High to Low"/>
                                            <String fx:value="Newest First"/>
                                            <String fx:value="Most Popular"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                                
                                <ComboBox promptText="Category" styleClass="filter-combo">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="All Categories"/>
                                            <String fx:value="Programming"/>
                                            <String fx:value="Design"/>
                                            <String fx:value="Business"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                                
                                <Button styleClass="refresh-button">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="REFRESH" size="14"/>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Refresh Offers"/>
                                    </tooltip>
                                </Button>
                            </HBox>
                        </HBox>

                        <FlowPane fx:id="offersContainer" 
                                hgap="20" 
                                vgap="20" 
                                style="-fx-padding: 20; -fx-background-color: transparent;"
                                prefWrapLength="1200">
                            <!-- Offer Card Template -->
                            <VBox styleClass="offer-card" 
                                  style="-fx-background-color: white; 
                                         -fx-padding: 25; 
                                         -fx-background-radius: 15;">
                                <!-- Card Header -->
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                                        <Label styleClass="offer-title" text="Offer Title"/>
                                        <HBox spacing="8">
                                            <Label styleClass="offer-status" text="ACTIVE"/>
                                            <Label styleClass="new-badge" text="NEW"/>
                                        </HBox>
                                    </VBox>
                                    <Label styleClass="discount-badge" text="-10%"/>
                                </HBox>

                                <!-- Price Section -->
                                <VBox spacing="5" style="-fx-padding: 20 0;">
                                    <HBox alignment="BASELINE_LEFT" spacing="2">
                                        <Label styleClass="currency-symbol" text="\$"/>
                                        <Label styleClass="offer-price" text="99.99"/>
                                    </HBox>
                                    <HBox spacing="10" alignment="CENTER_LEFT">
                                        <Label styleClass="price-period" text="per month"/>
                                        <Label styleClass="original-price" text="\$129.99"/>
                                    </HBox>
                                </VBox>

                                <!-- Description -->
                                <Text styleClass="offer-description" 
                                      text="Offer description goes here..." 
                                      wrappingWidth="310"/>

                                <!-- Features List -->
                                <VBox spacing="8" styleClass="features-list" style="-fx-padding: 15 0;">
                                    <HBox spacing="10" styleClass="feature-item">
                                        <FontAwesomeIconView glyphName="CHECK_CIRCLE" styleClass="feature-icon"/>
                                        <Label text="Full course access" styleClass="feature-text"/>
                                    </HBox>
                                    <HBox spacing="10" styleClass="feature-item">
                                        <FontAwesomeIconView glyphName="CHECK_CIRCLE" styleClass="feature-icon"/>
                                        <Label text="Certificate included" styleClass="feature-text"/>
                                    </HBox>
                                </VBox>

                                <!-- Action Buttons -->
                                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 15 0 0 0;">
                                    <Button styleClass="show-details-button" text="Show Details"/>
                                    <Button styleClass="subscribe-button" text="Subscribe">
                                        <graphic>
                                            <FontAwesomeIconView glyphName="CHECK" fill="white" size="14"/>
                                        </graphic>
                                    </Button>
                                </HBox>
                            </VBox>
                        </FlowPane>
                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane> 