<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import io.github.palexdev.materialfx.controls.*?>

<?import javafx.scene.control.Tooltip?>
<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.learniverse.controllers.Competition.BackofficeCompetitionsController">
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="220.0" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #1E293B, #334155); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 0);">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="20.0" />
            </padding>

            <!-- App Name/Logo with Admin indicator -->
            <VBox alignment="CENTER" spacing="5">
                <Label style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" text="Learniverse" />
                <Label style="-fx-text-fill: #64B5F6; -fx-font-size: 14px;" text="Admin Panel" />
            </VBox>

            <!-- Navigation Buttons -->
            <Button alignment="BASELINE_LEFT" graphicTextGap="10" maxWidth="1.7976931348623157E308" onAction="#dash" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-cursor: hand ; -fx-background-radius: 8;">
                <graphic>
                    <Label style="-fx-text-fill: white;" text="📊" />
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                </padding>
                <HBox.margin>
                    <Insets top="10.0" />
                </HBox.margin>
                <font>
                    <Font size="14.0" />
                </font>
                <text>Dashboard</text>
            </Button>

            <Button alignment="BASELINE_LEFT" graphicTextGap="10" maxWidth="1.7976931348623157E308" onAction="#usersButton" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-cursor: hand ; -fx-background-radius: 8;">
                <graphic>
                    <Label style="-fx-text-fill: white;" text="👥" />
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                </padding>
                <text>Users</text>
            </Button>

            <Button alignment="BASELINE_LEFT" graphicTextGap="10" maxWidth="1.7976931348623157E308" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;">
                <graphic>
                    <Label style="-fx-text-fill: white;" text="📚" />
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                </padding>
                <text>Offers</text>
            </Button>

            <Button alignment="BASELINE_LEFT" graphicTextGap="10" maxWidth="1.7976931348623157E308" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;">
                <graphic>
                    <Label style="-fx-text-fill: white;" text="📚" />
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                </padding>
                <text>Courses</text>
            </Button>

            <Button alignment="BASELINE_LEFT" graphicTextGap="10" maxWidth="1.7976931348623157E308" prefHeight="40.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 15px; -fx-font-family: 'Poppins'; -fx-background-radius: 8;">
                <graphic>
                    <Label style="-fx-text-fill: white;" text="📝" />
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                </padding>
                <text>Competitions</text>
            </Button>


            <Button alignment="BASELINE_LEFT" graphicTextGap="10" maxWidth="1.7976931348623157E308" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;">
                <graphic>
                    <Label style="-fx-text-fill: white;" text="📢" />
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                </padding>
                <text>Forums</text>
            </Button>

            <Button alignment="BASELINE_LEFT" graphicTextGap="10" maxWidth="1.7976931348623157E308" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;">
                <graphic>
                    <Label style="-fx-text-fill: white;" text="📈" />
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                </padding>
                <text>Complaints</text>
            </Button>

            <!-- Profile at bottom -->
            <VBox VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="5.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 8;">
                <padding>
                    <Insets bottom="8.0" left="5.0" right="5.0" top="8.0" />
                </padding>
                <StackPane>
                    <Circle fx:id="circleProfile" fill="#FF5722" radius="18" />
                    <Label fx:id="FirstLetter" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="A" />
                </StackPane>
                <VBox prefHeight="36.0" prefWidth="72.0" spacing="2">
                    <Label fx:id="navUsernameLabel" minWidth="60.0" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Username" />
                    <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 11px;" text="Admin" />
                </VBox>
                <Button fx:id="Profilebtn" mnemonicParsing="false" onAction="#Profile" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-border-color: transparent;">
                    <tooltip>
                        <Tooltip text="Logout" />
                    </tooltip>
                    <HBox.margin>
                        <Insets left="30.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#Logout" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-border-color: transparent;">
                    <tooltip>
                        <Tooltip text="Logout" />
                    </tooltip>
                </Button>
            </HBox>
        </VBox>
    </left>


    <center>
        <!-- Main content area -->
        <VBox spacing="20" style="-fx-background-color: #f5f5f9; -fx-padding: 25;" prefHeight="800">
            <!-- TOP BAR -->
            <HBox alignment="CENTER" prefHeight="70.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                <!-- Welcome message -->
                <Label style="-fx-font-size: 20px; -fx-font-family: 'Poppins'; -fx-font-weight: bold; -fx-text-fill: #334155;" text="Competition Management" />

                <HBox HBox.hgrow="ALWAYS" />

                <!-- Search Area -->
                <HBox alignment="CENTER" prefHeight="45.0" prefWidth="350.0" spacing="10" style="-fx-background-color: #F0F2F5; -fx-background-radius: 25;">
                    <padding>
                        <Insets left="15.0" right="15.0" />
                    </padding>
                    <Label style="-fx-text-fill: #666;" text="🔍" />
                    <TextField fx:id="searchField" prefHeight="40.0" promptText="Search competitions..." style="-fx-background-color: transparent; -fx-font-family: 'Poppins';" HBox.hgrow="ALWAYS" />
                </HBox>
            </HBox>

            <!-- Card containing the table -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 12, 0, 0, 4);" VBox.vgrow="ALWAYS">
                <VBox style="-fx-padding: 24;" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Competitions" style="-fx-font-size: 20px; -fx-font-family: 'Poppins'; -fx-font-weight: bold; -fx-text-fill: #1E293B;">
                            <HBox.margin>
                                <Insets bottom="15.0" />
                            </HBox.margin>
                        </Label>
                        <Label text="(15)" style="-fx-font-size: 16px; -fx-font-family: 'Poppins'; -fx-text-fill: #64748B;">
                            <HBox.margin>
                                <Insets bottom="15.0" />
                            </HBox.margin>
                        </Label>
                        <HBox HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Table for competitions with enhanced styling -->
                    <TableView fx:id="competitionsTable" styleClass="competitions-table" VBox.vgrow="ALWAYS" prefHeight="600">
                        <columns>
                            <TableColumn fx:id="nameColumn" text="Name" prefWidth="220" />
                            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150" />
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="120" />
                            <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="160" />
                            <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="160" />
                            <TableColumn fx:id="participantsColumn" text="Participants" prefWidth="120" />
                            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200" />
                        </columns>
                        <placeholder>
                            <VBox alignment="CENTER" spacing="15">
                                <Label text="No competitions found" style="-fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-text-fill: #64748b;" />
                                <Label text="Create a new competition to get started" style="-fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-text-fill: #94a3b8;" />
                            </VBox>
                        </placeholder>
                        <style>
                            -fx-background-color: white;
                            -fx-table-cell-border-color: transparent;
                            -fx-border-color: transparent;
                            -fx-border-width: 0;
                            -fx-border-radius: 12px;
                            -fx-background-radius: 12px;
                            -fx-font-size: 14px;
                            -fx-font-family: 'Poppins';
                            -fx-padding: 8;

                            /* Column header styling - ENHANCED */
                            .column-header {
                                -fx-background-color: #EBF4FF;
                                -fx-border-color: transparent;
                                -fx-border-width: 0;
                                -fx-padding: 18 20;
                                -fx-alignment: CENTER_LEFT;
                                -fx-text-fill: #2D3748;
                                -fx-font-family: 'Poppins';
                                -fx-font-size: 14px;
                                -fx-font-weight: bold;
                            }

                            .column-header-background {
                                -fx-background-color: #EBF4FF;
                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 4, 0, 0, 1);
                                -fx-background-radius: 10 10 0 0;
                                -fx-padding: 0;
                            }

                            .column-header .label {
                                -fx-alignment: CENTER_LEFT;
                                -fx-text-fill: #2D3748;
                                -fx-font-weight: bold;
                                -fx-font-size: 14px;
                                -fx-padding: 6 0;
                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.01), 1, 0, 0, 1);
                            }

                            .column-header:hover {
                                -fx-background-color: #DBEAFE;
                                -fx-cursor: hand;
                            }

                            .filler {
                                -fx-background-color: #EBF4FF;
                            }

                            /* Column header sort arrow styling */
                            .column-header > .arrow {
                                -fx-background-color: #3B82F6;
                                -fx-background-insets: 0;
                                -fx-padding: 0;
                                -fx-shape: "M4 8L0 4h8z";
                            }

                            /* Table rows */
                            .table-row-cell {
                                -fx-cell-size: 60px;
                                -fx-background-color: white;
                                -fx-border-color: transparent transparent #f1f5f9 transparent;
                                -fx-border-width: 0 0 1 0;
                                -fx-padding: 0;
                            }

                            /* Table cell styling */
                            .table-cell {
                                -fx-text-fill: #334155;
                                -fx-alignment: CENTER_LEFT;
                                -fx-font-family: 'Poppins';
                                -fx-font-size: 14px;
                                -fx-padding: 12 20;
                                -fx-background-color: transparent;
                                -fx-border-color: transparent;
                            }

                            /* Row hover effect with smooth transition */
                            .table-row-cell {
                                -fx-background-insets: 0;
                                -fx-padding: 0.0;
                                -fx-background-color: white;
                                -fx-cursor: hand;
                            }

                            .table-row-cell:hover {
                                -fx-background-color: #f8fafc;
                            }

                            /* Selected row styling */
                            .table-row-cell:selected {
                                -fx-background-color: #e0f2fe;
                            }

                            .table-row-cell:selected .table-cell {
                                -fx-text-fill: #0c4a6e;
                            }

                            /* Alternating row colors - subtle distinction */
                            .table-row-cell:even {
                                -fx-background-color: white;
                            }

                            .table-row-cell:odd {
                                -fx-background-color: #fafafa;
                            }

                            /* Status column styling for badges */
                            #statusColumn .table-cell {
                                -fx-alignment: CENTER;
                                -fx-padding: 0;
                            }

                            /* Category column custom styling */
                            #categoryColumn .table-cell {
                                -fx-alignment: CENTER;
                            }

                            /* Participant column styling with icon */
                            #participantsColumn .table-cell {
                                -fx-alignment: CENTER;
                            }

                            /* Action buttons styling */
                            #actionsColumn .table-cell {
                                -fx-alignment: CENTER;
                                -fx-spacing: 8;
                            }

                            /* Scrollbar styling */
                            .scroll-bar:vertical {
                                -fx-background-color: white;
                                -fx-background-radius: 0;
                                -fx-padding: 0 0 0 1;
                            }

                            .scroll-bar:vertical .thumb {
                                -fx-background-color: #cbd5e1;
                                -fx-background-radius: 8;
                            }

                            .scroll-bar:vertical .thumb:hover {
                                -fx-background-color: #94a3b8;
                            }

                            .scroll-bar .increment-button,
                            .scroll-bar .decrement-button {
                                -fx-background-color: transparent;
                                -fx-padding: 5;
                            }

                            .scroll-bar .increment-arrow,
                            .scroll-bar .decrement-arrow {
                                -fx-background-color: #64748b;
                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.0), 0, 0, 0, 0);
                            }

                            /* Selection highlighting */
                            .table-view:focused {
                                -fx-focus-color: transparent;
                                -fx-faint-focus-color: transparent;
                            }

                            /* Table view overall styling */
                            .table-view {
                                -fx-focus-color: transparent;
                                -fx-faint-focus-color: transparent;
                                -fx-background-radius: 12;
                                -fx-border-radius: 12;
                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.03), 10, 0, 0, 2);
                            }

                            /* Custom cell factories for status badges */
                            .status-badge-active {
                                -fx-background-color: #dcfce7;
                                -fx-text-fill: #166534;
                                -fx-background-radius: 12;
                                -fx-padding: 5 10;
                                -fx-font-size: 12px;
                                -fx-font-weight: bold;
                            }

                            .status-badge-pending {
                                -fx-background-color: #fef9c3;
                                -fx-text-fill: #854d0e;
                                -fx-background-radius: 12;
                                -fx-padding: 5 10;
                                -fx-font-size: 12px;
                                -fx-font-weight: bold;
                            }

                            .status-badge-completed {
                                -fx-background-color: #dbeafe;
                                -fx-text-fill: #1e40af;
                                -fx-background-radius: 12;
                                -fx-padding: 5 10;
                                -fx-font-size: 12px;
                                -fx-font-weight: bold;
                            }

                            .status-badge-cancelled {
                                -fx-background-color: #fee2e2;
                                -fx-text-fill: #b91c1c;
                                -fx-background-radius: 12;
                                -fx-padding: 5 10;
                                -fx-font-size: 12px;
                                -fx-font-weight: bold;
                            }

                            /* Action buttons styling */
                            .action-button-edit {
                                -fx-background-color: #e0f2fe;
                                -fx-text-fill: #0369a1;
                                -fx-background-radius: 6;
                                -fx-padding: 6 12;
                                -fx-font-size: 12px;
                                -fx-cursor: hand;
                            }

                            .action-button-delete {
                                -fx-background-color: #fee2e2;
                                -fx-text-fill: #b91c1c;
                                -fx-background-radius: 6;
                                -fx-padding: 6 12;
                                -fx-font-size: 12px;
                                -fx-cursor: hand;
                            }

                            .action-button-view {
                                -fx-background-color: #f1f5f9;
                                -fx-text-fill: #475569;
                                -fx-background-radius: 6;
                                -fx-padding: 6 12;
                                -fx-font-size: 12px;
                                -fx-cursor: hand;
                            }
                        </style>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>

                    <!-- Pagination controls -->
                    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15 0 0 0;">
                        <Button style="-fx-background-color: #f1f5f9; -fx-text-fill: #64748b; -fx-background-radius: 6; -fx-padding: 8 12;">
                            <text>Previous</text>
                        </Button>
                        <Button style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 12;">
                            <text>1</text>
                        </Button>
                        <Button style="-fx-background-color: #f1f5f9; -fx-text-fill: #64748b; -fx-background-radius: 6; -fx-padding: 8 12;">
                            <text>2</text>
                        </Button>
                        <Button style="-fx-background-color: #f1f5f9; -fx-text-fill: #64748b; -fx-background-radius: 6; -fx-padding: 8 12;">
                            <text>3</text>
                        </Button>
                        <Button style="-fx-background-color: #f1f5f9; -fx-text-fill: #64748b; -fx-background-radius: 6; -fx-padding: 8 12;">
                            <text>Next</text>
                        </Button>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>