<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.learniverse.controller.OffreFormController"
      spacing="15" styleClass="form-container">
    
    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <Label text="Offer Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <GridPane vgap="15" hgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- Name -->
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Description -->
                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextArea fx:id="descriptionArea" wrapText="true" prefRowCount="3" 
                         GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Price -->
                <Label text="Price per Month:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Discount -->
                <Label text="Discount (%):" GridPane.rowIndex="3" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="discountField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Applicable Plans -->
                <Label text="Plan Type:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="planTypeComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- Custom Plan -->
                <Label text="Custom Plan:" GridPane.rowIndex="5" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="customPlanField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <!-- Conditions -->
                <Label text="Conditions:" GridPane.rowIndex="6" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextArea fx:id="conditionsArea" wrapText="true" prefRowCount="3"
                         GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <!-- Promo Code -->
                <Label text="Promo Code:" GridPane.rowIndex="7" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="promoCodeField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <!-- Max Subscriptions -->
                <Label text="Max Subscriptions:" GridPane.rowIndex="8" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="maxSubscriptionsField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                <!-- Target Audience -->
                <Label text="Target Audience:" GridPane.rowIndex="9" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextArea fx:id="targetAudienceArea" wrapText="true" prefRowCount="2"
                         GridPane.rowIndex="9" GridPane.columnIndex="1"/>

                <!-- Benefits -->
                <Label text="Benefits:" GridPane.rowIndex="10" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <TextArea fx:id="benefitsArea" wrapText="true" prefRowCount="3"
                         GridPane.rowIndex="10" GridPane.columnIndex="1"/>

                <!-- Valid From -->
                <Label text="Valid From:" GridPane.rowIndex="11" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <DatePicker fx:id="validFromPicker" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

                <!-- Valid Until -->
                <Label text="Valid Until:" GridPane.rowIndex="12" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <DatePicker fx:id="validUntilPicker" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

                <!-- Active Status -->
                <Label text="Status:" GridPane.rowIndex="13" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;"/>
                <CheckBox fx:id="activeCheckBox" text="Active" selected="true" 
                         GridPane.rowIndex="13" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </ScrollPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" 
                defaultButton="true"/>
        <Button fx:id="cancelButton" text="Cancel" 
                style="-fx-background-color: #f44336; -fx-text-fill: white;" 
                cancelButton="true"/>
    </HBox>

</VBox> 