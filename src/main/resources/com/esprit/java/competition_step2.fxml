<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="main-panel" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.java.controllers.CompetitionStep2Controller">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="form-title" text="Create Competition">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      
      <HBox spacing="10.0">
         <children>
            <Label styleClass="section-header" text="Step 2: Add Challenges" />
         </children>
         <VBox.margin>
            <Insets bottom="5.0" top="0.0" />
         </VBox.margin>
      </HBox>
      
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label styleClass="subtitle" text="Add challenges to your competition:" />
            <Button mnemonicParsing="false" onAction="#handleAddChallenge" styleClass="add-button" text="Add Challenge" />
         </children>
         <VBox.margin>
            <Insets bottom="5.0" top="10.0" />
         </VBox.margin>
      </HBox>
      
      <VBox fx:id="noChallengesWarning" styleClass="warning-box" visible="true">
          <children>
              <Label styleClass="warning-message" text="At least one challenge is required. Click 'Add Challenge' to create a challenge for this competition." wrapText="true" />
          </children>
      </VBox>
      
      <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="400.0">
         <content>
            <VBox fx:id="challengesContainer" spacing="15.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
      
      <HBox alignment="BOTTOM_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#handleBack" styleClass="secondary-button" text="Back" />
            <Button fx:id="previewButton" mnemonicParsing="false" onAction="#handlePreview" styleClass="secondary-button" text="Preview" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" styleClass="primary-button" text="Save Competition" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox> 