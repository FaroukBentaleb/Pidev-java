<AnchorPane prefHeight="220.0" prefWidth="800.0" stylesheets="@styleAffichage.css" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.learniverse.controllers.PosteItemController">
    <children>
        <VBox spacing="10"> <!-- Conteneur principal -->

            <HBox spacing="20" styleClass="post-card">
                <!-- Partie gauche -->
                <VBox spacing="10">
                    <HBox spacing="10" styleClass="post-header">
                        <Label styleClass="published-by-label" text="Published By" />
                        <Label fx:id="auteurLabel" styleClass="author-name" />
                    </HBox>

                    <HBox spacing="10" styleClass="post-category">
                        <Label text="ðŸ“Œ" />
                        <Label fx:id="categorieLabel" />
                        <Label text="ðŸ“…" />
                        <Label fx:id="dateLabel" />
                        <Label text="ðŸ’¬" />
                        <Label fx:id="nbCommentairesLabel" />
                    </HBox>

                    <Label fx:id="titreLabel" styleClass="post-title" />
                    <Label fx:id="contenuLabel" styleClass="post-content" wrapText="true" />

                    <!-- HBox boutons traduction / commentaires -->
                    <HBox spacing="10">
                        <Button fx:id="traduireButton" onAction="#handleTraduire" styleClass="comment-btn" text="Traduire" />
                        <Button onAction="#ouvrirCommentaires" styleClass="comment-btn" text="Comment" />
                    </HBox>

                    <!-- EMOJIS dÃ©placÃ©s ici -->
                    <HBox fx:id="emojiBox" spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5;" />
                </VBox>

                <!-- Partie droite : image + actions -->
                <VBox alignment="CENTER_RIGHT" spacing="10">
                    <ImageView fx:id="photoImageView" fitHeight="100" fitWidth="348.0" preserveRatio="true" styleClass="post-image" />
                    <Button fx:id="deleteB" onAction="#handleDelete" styleClass="comment-btn" text="Delete" />
                    <Button fx:id="updateB" onAction="#handleUpdate" styleClass="comment-btn" text="Modify" />
                </VBox>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
