<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.learniverse.controllers.PosteItemController"
      styleClass="post-card"
      stylesheets="@styleAffichageItem.css"
      spacing="10"
      style="-fx-padding: 15; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">

    <!-- En-tête avec infos auteur -->
    <HBox styleClass="post-header" spacing="10" alignment="CENTER_LEFT">
        <StackPane>
            <Circle radius="20" fill="#e0e0e0"/>
            <ImageView fitHeight="40" fitWidth="40" preserveRatio="true"/>
        </StackPane>
        <VBox spacing="2">
            <HBox spacing="5">
                <Label styleClass="published-by-label" text="Published By"/>
                <Label fx:id="auteurLabel" styleClass="author-name"/>
            </HBox>
            <HBox spacing="10" styleClass="post-meta">
                <Label text="📌" styleClass="meta-icon"/>
                <Label fx:id="categorieLabel" styleClass="meta-text"/>
                <Label text="📅" styleClass="meta-icon"/>
                <Label fx:id="dateLabel" styleClass="meta-text"/>
                <Label text="💬" styleClass="meta-icon"/>
                <Label fx:id="nbCommentairesLabel" styleClass="meta-text"/>
            </HBox>
        </VBox>
    </HBox>

    <!-- Contenu principal -->
    <VBox spacing="10" style="-fx-padding: 5 0;">
        <Label fx:id="titreLabel" styleClass="post-title"/>
        <Label fx:id="contenuLabel" styleClass="post-content" wrapText="true"/>

        <!-- Image optionnelle -->
        <ImageView fx:id="photoImageView"
                   fitHeight="150"
                   fitWidth="300"
                   preserveRatio="true"
                   visible="false"
                   managed="false"
                   styleClass="post-image"/>
    </VBox>

    <!-- Pied de carte avec boutons -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-border-width: 1 0 0 0; -fx-border-color: #eee; -fx-padding: 10 0 0 0;">
        <Button onAction="#ouvrirCommentaires" style="-fx-background-color: #ab82cc; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5 15; -fx-background-radius: 20;" text="Comment"/>
        <HBox fx:id="emojiBox" spacing="5" alignment="CENTER_LEFT"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="traduireButton" onAction="#handleTraduire" style="-fx-font-size: 20px; -fx-background-color: transparent; -fx-text-fill: #666; -fx-cursor: hand;" text="🌍"/>
        <Button fx:id="updateB" onAction="#handleUpdate" style="-fx-font-size: 20px; -fx-background-color: transparent; -fx-text-fill: #666; -fx-cursor: hand;" text="✎"/>
        <Button fx:id="deleteB" onAction="#handleDelete" style="-fx-font-size: 20px; -fx-background-color: transparent; -fx-text-fill: #666; -fx-cursor: hand;" text="🗑"/>
    </HBox>
</VBox>